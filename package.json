{
  "name": "momeokjo-backend",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "build": "nest build",
    "start": "dotenv -e .prod.env -- nest start",
    "start:dev": "dotenv -e .dev.env -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "test": "dotenv -e .test.env -- jest",
    "test:watch": "dotenv -e .test.env -- jest --watch",
    "test:cov": "dotenv -e .test.env -- jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:push:dev": "dotenv -e .dev.env -- npx prisma db push && npm run prisma:generate",
    "prisma:migrate:dev": "dotenv -e .dev.env -- prisma migrate dev",
    "prisma:push:test": "dotenv -e .test.env -- npx prisma db push && npm run prisma:generate",
    "prisma:migrate:test": "dotenv -e .test.env -- prisma migrate dev"
  },
  "_comment:script": {
    "prisma:generate": "Prisma Client 생성",
    "prisma:push:dev": "개발 DB에 스키마 적용",
    "prisma:migrate:dev": "개발 DB에 마이그레이션",
    "prisma:push:test": "테스트 DB에 스키마 적용",
    "prisma:migrate:test": "테스트 DB에 마이그레이션"
  },
